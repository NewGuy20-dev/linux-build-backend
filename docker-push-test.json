{
  "base": "arch",
  "architecture": "x86_64",
  "kernel": {
    "version": "linux-lts"
  },
  "init": "systemd",
  "filesystem": {
    "root": "ext4"
  },
  "packages": ["base", "linux-lts", "linux-firmware", "git", "vim"],
  "securityFeatures": {
    "firewall": {
      "backend": "nftables",
      "policy": "deny",
      "rules": []
    }
  },
  "customization": {
    "shell": "bash"
  }
}
