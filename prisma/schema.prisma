datasource db {
  provider = "postgresql"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model Build {
  id           String    @id @default(cuid())
  name         String
  spec         Json
  status       String    @default("queued")
  imageUrl     String?
  isoPath      String?
  logs         BuildLog[]
  createdAt    DateTime  @default(now())
  finishedAt   DateTime?
}

model BuildLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  message   String
  build     Build    @relation(fields: [buildId], references: [id])
  buildId   String
}
